<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <ImageButton
                android:src="@drawable/back_arrow"
                android:background="@color/colorWhite"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:src="@drawable/logo_circle"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:text="Sign Up"
                android:textSize="25sp"
                android:textColor="@color/colorBlue"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/reg_username"
                android:hint="Username"
                android:background="@drawable/form_input"
                android:paddingLeft="25dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <EditText
                android:id="@+id/reg_password"
                android:hint="Password"
                android:background="@drawable/form_input"
                android:paddingLeft="25dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <EditText
                android:id="@+id/reg_konfirm_password"
                android:hint="Konfirmasi Password"
                android:background="@drawable/form_input"
                android:paddingLeft="25dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>


            <EditText
                android:id="@+id/reg_nama"
                android:hint="Nama Lengkap"
                android:layout_marginTop="20dp"
                android:background="@drawable/form_input"
                android:paddingLeft="25dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <EditText
                android:id="@+id/reg_ttl"
                android:hint="Tempat, Tanggal Lahir"
                android:background="@drawable/form_input"
                android:paddingLeft="25dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>


            <EditText
                android:id="@+id/reg_umur"
                android:hint="Umur"
                android:background="@drawable/form_input"
                android:paddingLeft="25dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>


            <EditText
                android:id="@+id/reg_alamat"
                android:hint="Alamat Lengkap"
                android:background="@drawable/form_input"
                android:paddingLeft="25dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <EditText
                android:id="@+id/reg_no_hp"
                android:hint="No. Handphone"
                android:background="@drawable/form_input"
                android:paddingLeft="25dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>


            <EditText
                android:id="@+id/reg_jenis_kelamin"
                android:hint="Jenis Kelamin"
                android:background="@drawable/form_input"
                android:paddingLeft="25dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <EditText
                android:id="@+id/reg_gol_darah"
                android:hint="Golongan Darah"
                android:background="@drawable/form_input"
                android:paddingLeft="25dp"
                android:paddingBottom="5dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/btn_daftar"
                    android:background="@drawable/bg_home"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:text="Sign Up"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>