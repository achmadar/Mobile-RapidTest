<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_booking_nama_rs"
                android:text="Nama Rumah Sakit"
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_jadwal"
                android:text="Jadwal : "
                android:textSize="15sp"
                android:layout_below="@id/list_booking_nama_rs"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/list_booking_jadwal_rs"
                android:layout_below="@id/list_booking_nama_rs"
                android:textSize="15sp"
                android:layout_toRightOf="@id/txt_jadwal"
                android:text="08.00 - 15.00"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>
