<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_rs"
            android:text="Nama Rumah Sakit"
            android:textColor="@color/colorBlue"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/telp_rs"
            android:text="Tlp. 031-6767676"
            android:textColor="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/placeholder"
                android:src="@drawable/placeholder"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/alamat_rs"
                android:text="Jl. Panji No.100, Krajan, Panggungrejo, Kec. Kepanjen"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorGrey"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/jadwal_rs"
        android:text="08.00 - 15.00"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorGray"
        android:layout_toRightOf="@id/nama_rs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>